#!/bin/sh
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=2
#SBATCH --mem=2gb
#SBATCH --time=00:05:00
#SBATCH --job-name=blast_aa
#SBATCH --error=blast.aa.%J.err
#SBATCH --output=blast.aa.%J.out
#SBATCH --reservation=springuno

module load blast/2.2.29
module load biodata/1.0

cp $BLAST/yeast.aa.* /tmp
cp yeast.aa.fasta /tmp

blastp -db /tmp/yeast.aa -query /tmp/yeast.aa.fasta -out /tmp/blast_protein.alignments -num_threads $SLURM_NTASKS_PER_NODE
cp /tmp/blast_protein.alignments .
